@model EditUserViewModel

<!-- Edit User Modal -->
<div class="modal fade" id="modalEditUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-centered modal-dialog-scrollable modal-lg" role="document">
        <form class="form"
              enctype="multipart/form-data"
              method="post"
              id="EditUserForm"
              asp-area="Admin"
              asp-controller="User"
              asp-action="Edit"
              data-ajax="true">

            <input type="hidden" asp-for="Id" />

            <div class="modal-content">
                <div class="modal-header bg-success">
                    <h5 class="modal-title white" id="exampleModalCenterTitle">ویرایش کاربر</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="بستن">
                        <i class="bx bx-x"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-6 col-12">
                                <div class="form-group">
                                    <label asp-for="Name"></label>
                                    <input asp-for="Name" id="first-name-vertical" class="form-control" placeholder="نام">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group">
                                    <label asp-for="LastName"></label>
                                    <input asp-for="LastName" class="form-control" placeholder="نام خانوادگی">
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input type="email" asp-for="Email" class="form-control" placeholder="ایمیل">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group">
                                    <label asp-for="Phone"></label>
                                    <input asp-for="Phone" class="form-control" placeholder="تلفن همراه">
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group">
                                    <label asp-for="PositionId"></label>
                                    <select asp-for="PositionId" asp-items="Model.PositionList" class="form-control"></select>
                                    <span asp-validation-for="PositionId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group">
                                    <label asp-for="IsActive"></label>
                                    <select asp-for="IsActive" asp-items="Model.StatusList" class="form-control"></select>
                                    <span asp-validation-for="IsActive" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6 col-12">
                                <fieldset class="pt-1">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" asp-for="EditIsHRMember" class="custom-control-input">
                                        <label class="custom-control-label" for="EditIsHRMember">عضو تیم منابع انسانی</label>
                                    </div>
                                </fieldset>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-secondary" data-dismiss="modal">
                        <i class="bx bx-x d-block d-sm-none"></i>
                        <span class="d-none d-sm-block">انصراف</span>
                    </button>
                    <button type="submit" class="btn btn-success ml-1">
                        <i class="bx bx-check d-block d-sm-none"></i>
                        <span class="d-none d-sm-block">ثبت</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>


<script type="text/javascript">

    $('#EditUserForm').submit(function (e) {
        e.preventDefault();
        $(".loader-box").css("display", "block");
        var action = $(this).attr('action');
        var formData = new FormData($(this).get(0));
        $.ajax({
            type: "POST",
            dataType: "json",
            url: action,
            data: formData,
            processData: false,
            contentType: false,
            success: function (data, status, settings) {
                $(".loader-box").css("display", "none");
                resetEditValidation();
                if (data.success)
                {
                    toastr.success('ویرایش کاربر با موفقیت انجام شد.', 'عملیات موفق', {
                        rtl: true,
                        positionClass: 'toast-bottom-right',
                        containerId: 'toast-bottom-right'
                    });
                    reloadUserDataTable();
                    resetEditForm();
                    $('#modalEditUser').modal('toggle');
                }
                else
                {
                    if (data.isValid)
                    {
                        toastr.error(data.message, 'اخطار!', {
                            rtl: true,
                            positionClass: 'toast-bottom-right',
                            containerId: 'toast-bottom-right'
                        });
                    }
                    else
                    {
                        displayEditValidationErrors(data.errors);
                    }
                }
            },
            error: function (request, options, err) {
                $(".loader-box").css("display", "none");
                toastr.error('ویرایش کاربر با خطا مواجه شد.', 'اخطار!', {
                    rtl: true,
                    positionClass: 'toast-bottom-right',
                    containerId: 'toast-bottom-right'
                });
            }
        });
        return true;
    });

    function displayEditValidationErrors(errors) {

        for (var i = 0; i < errors.length; i++) {
            var error = errors[i];
            var fieldName = error.property; 
            var errorMessage = error.errors; 

            var fieldErrorElement = $('#modalEditUser [data-valmsg-for="' + fieldName + '"]');
            fieldErrorElement.text(errorMessage);

            fieldErrorElement.addClass('inputs-error');
        }
    }

    function resetEditForm() {
        $('#EditUserForm input[name=Name]').val('');
        $('#EditUserForm input[name=LastName]').val('');
        $('#EditUserForm input[name=Email]').val('');
        $('#EditUserForm input[name=Phone]').val('');
        $('#EditUserForm select[name=PositionId]').val('');
        $('#EditUserForm select[name=Status]').val('');
    }

    function resetEditValidation() {

        $('#modalEditUser .text-danger').text('');
        $('#modalEditUser .text-danger').removeClass('inputs-error');
    }


</script>

