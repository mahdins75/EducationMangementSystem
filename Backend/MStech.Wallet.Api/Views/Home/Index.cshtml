@using Mstech.ViewModel.DTO;
@model ConfirmEmailNumberViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>شهرک صنعتی خیرآباد</title>
    <link href="https://fonts.googleapis.com/css?family=Heebo:400,700|IBM+Plex+Sans:600" rel="stylesheet">
    <link rel="stylesheet" href="~/landing/css/style.css">
    <script src="https://unpkg.com/scrollreveal@4.0.0/dist/scrollreveal.min.js"></script>
</head>
<body class="is-boxed has-animations">
    <!-- navbar -->
    <ul class="navbar-landing">
        <li>
            <img src="~/Content/logo.webp" style="max-width:50px" alt="شهرک صنعتی خیرآباد">
        </li>
        <li>
            @if (User.Identity == null || !User.Identity.IsAuthenticated)
            {
                <a href="@Url.Action("Login" , "Account" , new { Area = "MemberShip" , ReturnUrl = "/Home/Index" })" class="btn-enter"><img class="asset-light" src="~/landing/images/icons/enter.png" alt="Feature 03"> ورود به سیستم</a>
            }
            else
            {
                <a href="@Url.Action("Index" , "Home" , new { Area = "Admin" })" class="btn-enter">پنل کاربری</a>
            }
        </li>
    </ul>
    <div class="body-wrap boxed-container">

        <main>
            <section class="hero">
                <div class="container">
                    <div class="hero-inner">
                        <div class="hero-copy">
                            <h3 class="hero-title mt-0">سامانه مدیریت  </h3>
                            <h1 class="hero-title mt-0">شهرک صنعتی خیرآباد</h1>
                            <p class="hero-paragraph">شما کارجویان محترم می توانید از طریق این صفحه از آخرین موقعیت های شغلی در هولدینگ پروفیل اراک مطلع شوید.</p>
                            <div class="hero-cta">
                            </div>
                        </div>
                        <div class="hero-media">
                            <div class="header-illustration">
                                <img class="header-illustration-image asset-light" src="~/landing/images/header-illustration-light.svg" alt="Header illustration">
                                <img class="header-illustration-image asset-dark" src="~/landing/images/header-illustration-dark.svg" alt="Header illustration">
                            </div>
                            <div class="hero-media-illustration">
                                <img class="hero-media-illustration-image asset-light" src="~/landing/images/hero-media-illustration-light.svg" alt="Hero media illustration">
                                <img class="hero-media-illustration-image asset-dark" src="~/landing/images/hero-media-illustration-dark.svg" alt="Hero media illustration">
                            </div>
                            <div class="hero-media-container">
                                <img class="hero-media-image asset-light" src="~/landing/images/hero.jpg" alt="شهرک صنعتی خیرآباد" />
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="features section">
                <div class="container">
                    <div class="features-inner section-inner has-bottom-divider">
                        <div class="features-header text-center">
                            <div class="container-sm">
                                <h2 class="section-title mt-0">به تیم ما بپیوندید</h2>
                                <p class="section-paragraph"> در هولدینگ پروفیل، ما معتقدیم که توانمندی و پیشرفت شرکت ما به میزان زیادی به انتخاب افراد با استعداد و پرانرژی در تیم ما برمی‌گردد. </p>
                                <p class="section-paragraph">ما به دنبال افرادی هستیم که اراده دارند تا به چالش‌ها بپردازند و به همراه ما در ساخت آینده‌ای روشن حضور یابند. </p>
                                <p class="section-paragraph">اگر در هرکدام از موقعیت های شغلی مورد نیاز ما تخصص دارید، با کلیک بر روی آن روزمه خود را برای ما ارسال کنید. </p>
                                <p class="section-paragraph">منتظر ملاقات با شما هستیم و امیدواریم که بتوانیم با هم یک آینده موفق را رقم بزنیم.</p>
                                <div class="features-image">
                                    <img class="features-illustration asset-dark" src="~/landing/images/features-illustration-dark.svg" alt="Feature illustration">
                                    <img class="features-box asset-dark" src="~/landing/images/features-box-dark.svg" alt="Feature box">
                                    <img class="features-illustration asset-dark" src="~/landing/images/features-illustration-top-dark.svg" alt="Feature illustration top">
                                    <img class="features-illustration asset-light" src="~/landing/images/features-illustration-light.svg" alt="Feature illustration">
                                    <img class="features-box img-company asset-light" src="~/landing/images/ghaleb4.jpg" alt="Feature box">
                                    <img class="features-illustration asset-light" src="~/landing/images/features-illustration-top-light.svg" alt="Feature illustration top">
                                </div>
                            </div>
                        </div>
                        <div class="features-wrap" id="sec_jobs">
                            <div class="feature is-revealing">
                                <div class="feature-inner">
                                    <div class="feature-icon">
                                        <img class="asset-light" src="~/landing/images/icons/welder.png" alt="کارشناس جوشکاری صنعتی">
                                    </div>
                                    <div class="feature-content">
                                        <h3 class="feature-title mt-0">کارشناس جوشکاری صنعتی</h3>
                                        <p class="text-sm mb-0">لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است. </p>
                                        <div class="sub-resume">
                                            <a href="#">ارسال رزومه</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="feature is-revealing">
                                <div class="feature-inner">
                                    <div class="feature-icon">
                                        <img class="asset-light" src="~/landing/images/icons/human-resources.png" alt="کارشناس منابع انسانی">
                                    </div>
                                    <div class="feature-content">
                                        <h3 class="feature-title mt-0">کارشناس منابع انسانی</h3>
                                        <p class="text-sm mb-0">لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. </p>
                                        <div class="sub-resume">
                                            <a href="#">ارسال رزومه</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="feature is-revealing">
                                <div class="feature-inner">
                                    <div class="feature-icon">
                                        <img class="asset-light" src="~/landing/images/icons/porfolio.png" alt="Feature 03">
                                    </div>
                                    <div class="feature-content">
                                        <h3 class="feature-title mt-0">کارشناس فروش خانم</h3>
                                        <p class="text-sm mb-0">لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است </p>
                                        <div class="sub-resume">
                                            <a href="#">ارسال رزومه</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="cta section">
                <div class="container-sm">
                    <div class="cta-inner section-inner">
                        <div class="cta-header text-center">
                            <h2 class="section-title mt-0">عضویت در خبرنامه</h2>
                            <p class="section-paragraph">با عضویت در خبرنامه، در سریع ترین زمان ممکن از آخرین موقعیت های شغلی با خبر شوید.</p>
                            <div class="cta-cta">
                                <input type="email" placeholder="ایمیل خود را وارد کنید">
                                <button class="button button-primary" href="#">عضویت</button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </main>

        <footer class="site-footer has-top-divider">
            <div class="container">
                <div class="site-footer-inner">
                    <div class="brand footer-brand">
                        <a href="#">
                            <img class="asset-light" style="margin-top: -28px;" src="~/landing/images/main.webp" alt="پروفیل اراک">
                        </a>
                        <p>
                            شرکت پروفیل اراک با بیش از 3 دهه فعالیت مستمر و درخشان در صنایع پروفیل آلومینیوم ایران همواره مورد توجه متخصصان و مشتریان صنعت آلومینیوم بوده است.
                        </p>
                    </div>
                    @* <ul class="footer-links list-reset">
                    <li>
                    <a href="#">وبسایت شرکت</a>
                    </li>
                    <li>
                    <a href="#">درباره ما</a>
                    </li>
                    </ul> *@
                    <ul class="footer-social-links list-reset">
                        <li>
                            <a href="#">
                                <span class="screen-reader-text">Facebook</span>
                                <svg width="16" height="16" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M6.023 16L6 9H3V6h3V4c0-2.7 1.672-4 4.08-4 1.153 0 2.144.086 2.433.124v2.821h-1.67c-1.31 0-1.563.623-1.563 1.536V6H13l-1 3H9.28v7H6.023z" fill="#FFF" />
