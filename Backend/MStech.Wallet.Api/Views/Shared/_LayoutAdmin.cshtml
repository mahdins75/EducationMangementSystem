            });

            function loadNavItems() {
                $("#main-menu-navigation").html(localStorage.getItem("navItems"))
            }
            function Logout() {
                $("#logoutForm").submit();

            }
            function setDefaultSelectedList(elementId, value) {
                $('#' + elementId + ' option').filter(function () {
                    return $(this).val() === value;
                }).prop('selected', true);
            }
            function convertStringToTimeSpan(timeString) {
                timeString = timeString.replace('ق.ظ', 'AM').replace('ب.ظ', 'PM').replace('ساعت', 'hour').replace('دقیقه', 'minute');
                const [time, meridian] = timeString.split(' ');
                const [hours, minutes] = time.split(':').map(Number);
                const date = new Date();
                date.setHours(meridian === 'AM' ? hours : hours + 12);
                date.setMinutes(minutes);
                const formattedTime = date.toISOString().substr(11, 8);

                return formattedTime;
            }
            loadNavItems()

            //Set Active To Menu
            var currentPageUrl = window.location.pathname;
            $('#main-menu-navigation li').removeClass('active');
            $('#main-menu-navigation li a').each(function () {
                var address = $(this).attr('href');
                if (address !== undefined && address !== null && address !== "") {
                    if (address.toLowerCase() === currentPageUrl.toLowerCase()) {
                        $(this).parent('li').addClass('active');
                    }
                }
            });

        </script>
